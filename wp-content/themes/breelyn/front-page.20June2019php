<section id="banner" class="banner-row">
  <div id="hero-banner" class="carousel slide" data-ride="carousel">    
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <?php 
        $banner_arg = array(
            'post_type' => 'home-banner'
         );
         $banner_query = new WP_Query( $banner_arg );
         while ( $banner_query->have_posts() ) { $banner_query->the_post();
      ?>
      <div class="item">
        <?php if ( has_post_thumbnail() ) : ?>
        <img class="img-responsive" src="<?php echo get_the_post_thumbnail_url(); ?>" alt="<?php the_title(); ?>">
        <?php endif; ?>
      </div>
      <?php } wp_reset_postdata(); ?>

    </div>

    <script>
      jQuery(document).ready(function(){
        jQuery('#banner .carousel-inner .item:first-child').addClass('active');
      });
    </script>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#hero-banner" data-slide="prev">
    <span class="glyphicon fa fa-angle-left"></span>  
    </a>
    <a class="right carousel-control" href="#hero-banner" data-slide="next">
    <span class="glyphicon fa fa-angle-right"></span>  
    </a>
  </div>
</section>


